<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="textDefault">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="bigText" parent="textDefault">
        <item name="android:textSize">28dp</item>
    </style>
    <style name="mediumText" parent="textDefault">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="smallText" parent="textDefault">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="tinyText" parent="textDefault">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="defaultButton">
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="defaultPagerStrip">
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">@dimen/in_padding</item>
        <item name="android:paddingBottom">@dimen/in_padding</item>
        <item name="android:background">@color/colorAccentLight</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
