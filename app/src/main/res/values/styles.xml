<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="textDefault">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="bigText" parent="textDefault">
        <item name="android:textSize">28dp</item>
    </style>
    <style name="mediumText" parent="textDefault">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="smallText" parent="textDefault">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="defaultButton">
        <item name="android:background">@drawable/bg_default_button</item>
    </style>


</resources>
